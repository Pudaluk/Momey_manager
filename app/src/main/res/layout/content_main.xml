<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.luk.puda.momey_manager.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_border"
            android:layout_marginRight="@dimen/half_border"
            android:layout_marginTop="@dimen/half_border"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border"
                android:layout_marginBottom="@dimen/half_border"
                android:layout_marginRight="@dimen/half_border"
                android:layout_marginLeft="@dimen/half_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_text"
                    android:text="Balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBalance"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="0"
                        android:textSize="@dimen/border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/balance_currency"
                        android:paddingLeft="5dp"
                        android:text="Kč"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_border"
            android:layout_marginRight="@dimen/half_border"
            android:layout_marginTop="@dimen/half_border"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border"
                android:layout_marginBottom="@dimen/half_border"
                android:layout_marginRight="@dimen/half_border"
                android:layout_marginLeft="@dimen/half_border"
                android:orientation="vertical">

                <TextView
                    android:text="Structure of outcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_border"
            android:layout_marginRight="@dimen/half_border"
            android:layout_marginTop="@dimen/half_border"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_border"
                android:layout_marginBottom="@dimen/half_border"
                android:layout_marginRight="@dimen/half_border"
                android:layout_marginLeft="@dimen/half_border"
                android:orientation="vertical">
                <TextView
                    android:text="Overview of last Incomes/Outcomes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/structure_of_income_outcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/list_of_records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_border"
            android:layout_marginRight="@dimen/half_border"
            android:layout_marginTop="@dimen/half_border"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border"
                android:layout_marginBottom="@dimen/half_border"
                android:layout_marginRight="@dimen/half_border"
                android:layout_marginLeft="@dimen/half_border"
                android:orientation="vertical">

                <TextView
                    android:text="Graph of Balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_border"
            android:layout_marginRight="@dimen/half_border"
            android:layout_marginBottom="@dimen/half_border"
            android:layout_marginTop="@dimen/half_border"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border"
                android:layout_marginBottom="@dimen/half_border"
                android:layout_marginRight="@dimen/half_border"
                android:layout_marginLeft="@dimen/half_border"
                android:orientation="vertical">

                <TextView
                    android:text="Calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CalendarView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </CalendarView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
