<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/half_border"
        android:paddingTop="@dimen/half_border"
        android:paddingRight="@dimen/half_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/LightBlack"
            android:text="Name of Account"/>

        <EditText
            android:id="@+id/et_name_of_acc"
            android:layout_width="match_parent"

            android:textColorHighlight="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/LightBlack"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border"
            android:text="Set start balance"/>

        <EditText
            android:id="@+id/et_balance_of_acc"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:textColorHighlight="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_acc_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_border"
            android:layout_marginBottom="@dimen/half_border"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Save"/>

    </LinearLayout>

</ScrollView>